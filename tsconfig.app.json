{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
  },
  "plugins": [
    {
      "name": "next",
    },
  ],
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/test",
    "node_modules",
  ],
}
