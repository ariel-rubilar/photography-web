{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
  },
  "plugins": [
    {
      "name": "next",
    },
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "**/*.mjs",
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/test",
    "node_modules",
  ],
}
